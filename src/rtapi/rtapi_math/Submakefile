xeno_math-objs += rtapi/rtapi_math/s_cos.o
xeno_math-objs += rtapi/rtapi_math/k_cos.o
xeno_math-objs += rtapi/rtapi_math/e_rem_pio2.o
xeno_math-objs += rtapi/rtapi_math/k_rem_pio2.o
xeno_math-objs += rtapi/rtapi_math/s_scalbn.o
xeno_math-objs += rtapi/rtapi_math/k_standard.o
xeno_math-objs += rtapi/rtapi_math/s_cbrt.o
